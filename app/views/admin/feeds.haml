= haml :nav, :layout => false
- column_names = ['title', 'last_modified', 'entries', '&nbsp;']

%div.container
  %ul.breadcrumb
    %li.active
      %a{:href => "#fakelink"} Feeds
      
  %table.table.table-striped
    %tr
    - column_names.each do |name|
      %th= name.camelize
    - @feeds.each do |feed|
      %tr{"data-href" => "./feeds/#{CGI.escape(feed.feed_url)}"}
        %td
          - if feed.url
            %a{:href => feed.url}
              = feed.title
          - else
            = feed.title
          %span
          [
          = feed.feed_url
          ]
        %td= feed.last_modified.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M:%S")
        %td= feed.entries.count
        %td
          %i.fui-check-inverted.text-primary
            
          

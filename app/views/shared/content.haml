- if defined? @feed
  #{@feed.title}
  - @feed.entries.each_with_index do |entry, i|
    - break if i > 0
    %div.entry-body
      %div.header
        %h6
          %a{:href=>"#{entry.url}"} #{entry.title}
        %div.text-note
          header-note
      #{entry.body}
      
